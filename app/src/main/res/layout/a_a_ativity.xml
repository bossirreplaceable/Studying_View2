<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/a_girl1"
        android:src="@drawable/a_girl1"
        android:layout_width="200dp"
        android:scaleType="centerCrop"
        android:transitionName="a2b_anim"
        android:layout_height="200dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:textColor="#fff"
        android:text="Go_B"
        android:onClick="go2B"
        android:transitionName="a2b_anim2"
        android:layout_gravity="center" />

    <ImageView
        android:layout_width="150dp"
        android:id="@+id/a_man1"
        android:layout_gravity="right"
        android:src="@drawable/a_man1"
        android:transitionName="a2b_anim1"
        android:layout_height="150dp" />
</LinearLayout>
