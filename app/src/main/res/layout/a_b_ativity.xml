<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/a_girl1"
        android:transitionName="a2b_anim" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:onClick="go2C"
        android:text="Go_C"
        android:transitionName="a2b_anim2"
        android:textColor="#fff" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/a_man1"
        android:transitionName="a2b_anim1" />
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:onClick="go2C_Explode"
        android:text="Go_C_explode"
        android:transitionName="a2b_anim2"
        android:textColor="#fff" />
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:onClick="go2C_Fade"
        android:text="Go_C_fade"
        android:transitionName="a2b_anim2"
        android:textColor="#fff" />
</LinearLayout>
